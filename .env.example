# Copy this file to .env.local and fill in values for local development

# Backend API base (used both server and client). This is mapped to BaseURL in next.config.mjs
NEXT_PUBLIC_BASE_URL=https://animeapi.rypro.me

# Logto (OIDC) settings
LOGTO_ENDPOINT=https://auth.example.com
LOGTO_APP_ID=your-app-id
LOGTO_APP_SECRET=your-app-secret
LOGTO_CALLBACK_URL=http://localhost:3000

# Cookie secret for sessions (32+ random bytes)
COOKIE_SECRET=replace_with_strong_random_value

